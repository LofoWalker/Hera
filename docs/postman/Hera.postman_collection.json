{
  "info": {
    "_postman_id": "7b5e2ab7-8fd1-4fc2-9b0f-9f3b7b0d3f11",
    "name": "Hera API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Hera API endpoints. Includes Chat and Users resources. Use {{baseUrl}} to configure the server URL (default http://localhost:8080)."
  },
  "item": [
    {
      "name": "Chat",
      "item": [
        {
          "name": "POST /api/chat",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": [\n    \"Hello, how are you?\"\n  ]\n}"
            },
            "description": "Sends a message array to the AI and returns an array of AI responses."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response has array field response', function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json).to.have.property('response');",
                  "  pm.expect(Array.isArray(json.response)).to.be.true;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "POST /api/users (Create)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"jdoe\",\n  \"email\": \"jdoe@example.com\",\n  \"rawPassword\": \"Secretp@ssw0rd\",\n  \"age\": 30,\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "description": "Creates a new user and returns the created resource (201 Created)."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "const json = pm.response.json();",
                  "pm.test('Response contains id', function () {",
                  "  pm.expect(json).to.have.property('id');",
                  "});",
                  "pm.collectionVariables.set('userId', json.id);",
                  "pm.collectionVariables.set('username', json.username || 'jdoe');",
                  "pm.collectionVariables.set('email', json.email || 'jdoe@example.com');"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/users (List)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            },
            "description": "Returns the list of users."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Body is an array', function () { pm.expect(Array.isArray(pm.response.json())).to.be.true; });"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/users/:id (Get One)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "description": "Gets a single user by id. Expects 200 or 404."
          },
          "response": [],
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('userId')) {",
                  "  console.warn('[Postman] userId variable is not set. Run Create first.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 or 404', function () {",
                  "  pm.expect([200,404]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "PUT /api/users/:id (Update)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"jdoe_updated\",\n  \"email\": \"jdoe.updated@example.com\",\n  \"rawPassword\": \"NewP@ssw0rd!\",\n  \"age\": 31,\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "description": "Updates an existing user. Returns 200 with updated user or 400 on validation error."
          },
          "response": [],
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('userId')) {",
                  "  throw new Error('userId is not set. Run Create first.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('Updated user has same id', function () { pm.expect(json.id).to.eql(pm.collectionVariables.get('userId')); });"
                ]
              }
            }
          ]
        },
        {
          "name": "DELETE /api/users/:id (Delete)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "description": "Deletes a user by id. Returns 204 No Content."
          },
          "response": [],
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('userId')) {",
                  "  throw new Error('userId is not set. Run Create first.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 204', function () { pm.response.to.have.status(204); });",
                  "pm.collectionVariables.unset('userId');"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080", "type": "string" }
  ]
}
